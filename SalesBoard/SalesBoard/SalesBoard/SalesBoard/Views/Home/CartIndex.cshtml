@model IEnumerable<SalesBoard.Models.Cart>
<h2>Index</h2>

@if (Model != null)
{
<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Purchase Quantities
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cart in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => cart.CartId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cart.Quantity)
                </td>
                <td><a asp-action="Delete" asp-route-id="@cart.Item">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
}
else
{ 
<p>Shopping cart doesnot have this product.</p>
}